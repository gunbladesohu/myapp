<%= form_for(evidence_source) do |f| %>
  <% if evidence_source.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(evidence_source.errors.count, "error") %> prohibited this evidence_source from being saved:</h2>

      <ul>
      <% evidence_source.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :page_numbers %>
    <%= f.text_field :page_numbers %>
  </div>
    
  <div class="field">
    <%= f.label :volume %>
    <%= f.text_field :volume %>
  </div>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :DOI %>
    <%= f.text_field :DOI %>
  </div>
  
  <div class="field">
    <%= f.label :publisher %>
    <%= f.text_field :publisher %>
  </div>

  <div class="field">
    <%= f.label :journal_book %>
    <%= f.text_field :journal_book %>
  </div>

  <div class="field">
    <%= f.label :source %>
    <%= f.text_field :source %>
  </div>

  <div class="field">
    <%= f.label :year %>
    <%= f.date_select :year, start_year: 1995, discard_day:true, discard_month:true%>
  </div>

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <div class="field">
    <%= f.label :research_level %>
    <%= f.text_field :research_level %>
  </div>

  <div class="field">
    <%= f.label :Moderator %>
    <%= f.select :moderator_id, User::Moderator_types, :prompt => "Select a payment method",:selected => User::Moderator_types[0] %>
  </div>

  <div class="field">
    <%= f.label :Submitter %>
    <p>
    <%= f.label  :Submitter,evidence_source.submitter_name%>
    </p>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



