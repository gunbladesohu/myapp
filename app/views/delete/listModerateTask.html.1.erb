<% provide(:title, @user.name) %>
<div class="row"
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>    
  </aside>

  <div class="col-md-8">
    <% if @user.moderatted_evidence_source.any? %>
      <h3>Evidence source to be moderatted (<%= @user.moderatted_evidence_source.count %>)</h3>
      <ol class="moderatted_evidence_source">
        <%= redirect_to @evidence_sources %>
      </ol>
      <%= will_paginate @evidence_sources %>
    <% end %>
  </div>  
</div>