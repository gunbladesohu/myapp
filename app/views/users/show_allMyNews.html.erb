<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>


<!-- new part to show news    //-->

  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @allMyNews.any? %>
      <ul class="UserNews ">
        <%= render @allMyNews %>
      </ul>
      <%= will_paginate @allMyNews%>
    <% end %>
  </div>
</div>